"2018-02-09 09:07:49 +0100"
diff --git a/src/Makeconf.mips b/src/Makeconf.mips
index 503d64c..4a00bdd 100644
--- a/src/Makeconf.mips
+++ b/src/Makeconf.mips
@@ -6,10 +6,14 @@ BITS = $(BITS-y)
 
 CROSS_COMPILE             ?= mips-linux-
 
-LD_EMULATION_CHOICE       := elf$(BITS)ltsmip
+LD_EMULATION_CHOICE-$(CONFIG_MIPS_LITTLE_ENDIAN) := elf$(BITS)ltsmip
+LD_EMULATION_CHOICE-$(CONFIG_MIPS_BIG_ENDIAN)    := elf$(BITS)btsmip
+LD_EMULATION_CHOICE       := $(LD_EMULATION_CHOICE-y)
 SHARED_FLAGS-clang        += -fno-integrated-as
-SHARED_FLAGS              += -EL -msoft-float -mabi=$(BITS)
+SHARED_FLAGS              += -msoft-float -mabi=$(BITS)
 SHARED_FLAGS              += -mno-abicalls
+SHARED_FLAGS-$(CONFIG_MIPS_LITTLE_ENDIAN) += -EL
+SHARED_FLAGS-$(CONFIG_MIPS_BIG_ENDIAN)    += -EB
 SHARED_FLAGS-$(CONFIG_CPU_MIPS32_R2) += -march=mips32r2
 SHARED_FLAGS-$(CONFIG_CPU_MIPS32_R6) += -march=mips32r6
 SHARED_FLAGS-$(CONFIG_CPU_MIPS64_R2) += -march=mips64r2
diff --git a/src/kern/mips/Kconfig b/src/kern/mips/Kconfig
index 82dd5ab..110b5a2 100644
--- a/src/kern/mips/Kconfig
+++ b/src/kern/mips/Kconfig
@@ -57,6 +57,19 @@ config CPU_MIPS64_R6
 
 endchoice
 
+choice
+        prompt "Endianess"
+        default MIPS_LITTLE_ENDIAN
+
+config MIPS_LITTLE_ENDIAN
+        bool "Little Endian"
+
+config MIPS_BIG_ENDIAN
+        bool "Big Endian"
+        select BIG_ENDIAN
+
+endchoice
+
 config WEAK_ORDERING
 	bool
 	prompt "Weakly ordered memory access" \