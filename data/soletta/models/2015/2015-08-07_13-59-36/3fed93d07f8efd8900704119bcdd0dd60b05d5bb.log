diff --git a/src/lib/comms/Makefile b/src/lib/comms/Makefile
index f8d6b6ec..6905818e 100644
--- a/src/lib/comms/Makefile
+++ b/src/lib/comms/Makefile
@@ -1,50 +1,49 @@
-obj-$(COMMS) += comms.mod
+obj-$(NETWORK) += networking.mod
 
-obj-comms-$(COMMS) := \
+obj-networking-$(NETWORK) := \
     sol-comms.o
 
-ifeq (y,$(NETWORK))
-    ifeq (y,$(PLATFORM_RIOTOS))
-    obj-comms-$(COMMS) += \
-        sol-network-riot.o
-    endif
-
-    ifeq (y,$(PLATFORM_LINUX))
-    obj-comms-$(COMMS) += \
-        sol-network-linux.o \
-        sol-socket-linux.o
-    endif
+ifeq (y,$(PLATFORM_RIOTOS))
+obj-networking-$(NETWORK) += \
+    sol-network-riot.o
+endif
+
+ifeq (y,$(PLATFORM_LINUX))
+obj-networking-$(NETWORK) += \
+    sol-network-linux.o \
+    sol-socket-linux.o
 endif
 
 ifeq (y,$(COAP))
-obj-comms-$(COMMS) += \
+obj-networking-$(NETWORK) += \
     coap.o \
     sol-coap.o
 endif
 
 ifeq (y,$(OIC))
-obj-comms-$(COMMS) += \
+obj-networking-$(NETWORK) += \
     sol-oic-client.o \
     sol-oic-server.o
 endif
 
-headers-comms-$(NETWORK) += \
+headers-networking-$(NETWORK) += \
     include/sol-network.h
 
-headers-comms-$(COAP) += \
+headers-networking-$(COAP) += \
     include/sol-coap.h
 
-headers-comms-$(OIC) += \
+headers-networking-$(OIC) += \
     include/sol-oic-client.h \
     include/sol-oic-server.h
 
 ifeq (y,$(HTTP_CLIENT))
-obj-comms-$(COMMS) += \
+obj-networking-$(NETWORK) += \
     sol-http-client-impl-curl.o
 
-obj-comms-$(COMMS)-extra-ldflags += \
+obj-networking-$(NETWORK)-extra-ldflags += \
     $(LIBCURL_LDFLAGS)
+
 endif
 
-headers-comms-$(HTTP_CLIENT) += \
+headers-networking-$(HTTP_CLIENT) += \
     include/sol-http-client.h
diff --git a/src/lib/comms/sol-comms.c b/src/lib/comms/sol-comms.c
