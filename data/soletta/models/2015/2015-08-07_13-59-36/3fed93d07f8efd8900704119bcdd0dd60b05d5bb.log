diff --git a/src/lib/comms/Kconfig b/src/lib/comms/Kconfig
index eb8945c2..1c139c89 100644
--- a/src/lib/comms/Kconfig
+++ b/src/lib/comms/Kconfig
@@ -1,14 +1,6 @@
-config COMMS
-	bool "Comms"
-	default y
-	help
-            Network connectivity modules. Includes CoAP, OIC
-            (client/server), HTTP (client), basic network link management.
-
 config NETWORK
 	bool "Network"
 	default y
