"2016-03-16 09:14:47 -0300"
diff --git a/Kconfig b/Kconfig
index f9f2b531..9c86806a 100644
--- a/Kconfig
+++ b/Kconfig
@@ -62,9 +62,13 @@ config MODULES
 
             If unsure, say Y.
 
+config ENV_PREFIX
+	string
+	option env="PREFIX"
+
 config PREFIX
 	string "Installation prefix"
-	default "/usr"
+	default $ENV_PREFIX
 	help
             This path is the intended installation prefix for the
             binaries. It is used by code paths that need to look for
@@ -95,14 +99,24 @@ config BUILD_TYPE_RELEASE
 	bool "release"
 endchoice
 
+config ENV_CFLAGS
+	string
+	option env="CFLAGS"
+
 config CONFIG_CFLAGS
        string "Arbitrary CFLAGS"
+       default $ENV_CFLAGS
        help
            Sets arbitrary CFLAGS to be used across make invocations
            without the need to be provided on every make call.
 
+config ENV_LDFLAGS
+	string
+	option env="LDFLAGS"
+
 config CONFIG_LDFLAGS
        string "Arbitrary LDFLAGS"
+       default $ENV_LDFLAGS
        help
            Sets arbitrary LDFLAGS to be used across make invocations
            without the need to be provided on every make call.
diff --git a/Makefile b/Makefile
index 2de10294..ea60e69b 100644
--- a/Makefile
+++ b/Makefile
@@ -1,6 +1,11 @@
 top_srcdir = ./
 MAKEFLAGS += -r --no-print-directory
 
+# So we can get correct defaults on Kconfig
+export PREFIX ?= "/usr"
+export CFLAGS ?=
+export LDFLAGS ?=
+
 # kconfig settings
 KCONFIG_CONFIG ?= $(top_srcdir).config
 KCONFIG_INCLUDE := $(top_srcdir)include/
diff --git a/tools/build/Makefile.vars b/tools/build/Makefile.vars
index ea86d5f2..30ff95be 100644
--- a/tools/build/Makefile.vars
+++ b/tools/build/Makefile.vars
@@ -195,9 +195,6 @@ endif
 GDB_AUTOLOAD_PY_DEST := $(build_gdbautoload)libsoletta.so.$(VERSION)-gdb.py
 GDB_AUTOLOAD_PY := $(top_srcdir)data/gdb/libsoletta.so-gdb.py
 
-COMMON_CFLAGS += $(CFLAGS)
-COMMON_LDFLAGS += $(LDFLAGS)
-
 ifeq (y, $(HAVE_GETCONF))
 ifneq (64, $(shell getconf LONG_BIT))
 COMMON_CFLAGS += $(CFLAG_FLOAT_STORE)