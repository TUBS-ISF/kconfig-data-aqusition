diff --git a/sysdeps/linux/Config.in b/sysdeps/linux/Config.in
index 95491c9a0..fb97c8f05 100644
--- a/sysdeps/linux/Config.in
+++ b/sysdeps/linux/Config.in
@@ -203,6 +203,21 @@ config EXTRA_CFLAGS_OPTIONS
